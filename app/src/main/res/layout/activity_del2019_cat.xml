<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feed.delete.Feed2019_d.del_2019_cat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:padding="10dp"
            android:text="2019 - Update and Delete"
            android:textColor="#000"
            android:textSize="23sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aref_ruqaa_bold"
            android:padding="10dp"
            android:text="Categories"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/finearts_2019_d"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/yg_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coiny"
                android:padding="25dp"
                android:text="FINE ARTS"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/finearts" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/awards_2019_d"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bl_gradient">

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/coiny"
                android:padding="25dp"
                android:text="AWARDS"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="152dp"
                android:layout_height="165dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/awards" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/upcoming_event__2019_d"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/yg_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coiny"
                android:padding="25dp"
                android:text="UPCOMING
                EVENTS"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-1dp"
                android:src="@drawable/upev" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fundedProjects_2019_d"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bl_gradient">

            <TextView
                android:textColor="@color/black"
                android:layout_width="218dp"
                android:layout_height="139dp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/coiny"
                android:padding="25dp"
                android:text="FUNDED PROJECTS"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="163dp"
                android:layout_height="159dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/fp" />
        </RelativeLayout>


    </LinearLayout>

</ScrollView>