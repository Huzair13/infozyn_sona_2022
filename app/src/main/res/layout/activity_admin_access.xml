<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_pic"
    tools:context=".Admin_Access">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#31FFFFFF"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageViewAdmin"
        android:layout_width="412dp"
        android:layout_height="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sona_logo" />
    <ImageView
        android:id="@+id/imageViewtransAdmin"
        android:layout_width="412dp"
        android:layout_height="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#2A255AE1"/>

    <TextView
        android:id="@+id/toptextAdmin"
        android:layout_width="238dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/baumans"
        android:text="Are You an Admin ??"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAdmin" />

    <ImageView
        android:id="@+id/imageView3Admin"
        android:layout_width="89dp"
        android:layout_height="76dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toEndOf="@+id/toptextAdmin"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAdmin"
        app:srcCompat="@drawable/ic_person" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Textinput_passAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toptextAdmin"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/InputAccessCodeAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_lock_black"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Admin Access Code"
            android:padding="16dp"
            android:textColorHint="#5A5454" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/ButtonLoginAdmin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/yellow_gradient"
        android:text="Enter into Admin Panel"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Textinput_passAdmin" />

</androidx.constraintlayout.widget.ConstraintLayout>